---
import Redes from '../components/Redes.astro';
---

<section
color="white"
id="contacto"
class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
>

<img
    slot="background"
    alt="contacto"
    class="h-full w-full object-cover object-center z-10"
    src="contacto.jpg"
    id="contacto"
  />

  <div class="z-30 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white">
    <header>
      <h2 class=`text-[40px] font-medium font-medium`>
        CONTACTAME
      </h2>
      <h2 class="text-sm">
        PRESIONANDO EN LOS SIGUIENTES ENLACES
      </h2>

<Redes></Redes>
      
   </header>
  </div>
</section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#contacto "
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "contacto.jpg"
  } else {
    imageElement.src = "contacto.jpg"
  }
</script>
