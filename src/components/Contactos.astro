---
import Section from "./Section.astro"
---

<Section
  title="CONTACTAME"
  subtitle="REDES SOCIALES"
  color="white"
  id="contacto"
>

  

  <img
    slot="background"
    alt="contacto"
    class="h-full w-full object-cover object-center"
    src="contacto.jpg"
    id="contacto"
  />

</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#contacto"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "contacto.jpg"
  } else {
    imageElement.src = "contacto.jpg"
  }
</script>
